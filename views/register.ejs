<% include layout/header.ejs %>
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form method='POST' class='register'>
                    <h2>Register</h2>
                    <div class="form-group">
                        <label for="register-nick">Nick name</label>
                        <input type="text" name="nick" class="form-control" id="register-nick" aria-describedby="emailHelp" 
                        placeholder="Nick name">
                    </div>
                    <div class="form-group">
                        <label for="register-email">Email address</label>
                        <input type="email" name="email" class="form-control" id="register-email" aria-describedby="emailHelp" placeholder="Enter email">
                        
                    </div>
                    <div class="form-group">
                        <label for="register-password">Password</label>
                        <input type="password" name="password" class="form-control" id="register-password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="register-password-confirm">Confirm</label>
                        <input type="password" name="password2" class="form-control" id="register-password-confirm" 
                        placeholder="Password">
                    </div>
                    <button  class="btn btn-primary register-btn">Register</button>
                </form>
            </div>
        </div>
    </div>
    

<% include layout/footer.ejs %>